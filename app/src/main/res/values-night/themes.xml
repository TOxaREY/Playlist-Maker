<resources>
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yp_white</item>
        <item name="colorPrimaryVariant">@color/yp_black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="itemFillColor">@color/yp_white</item>
        <item name="backgroundTint">@color/yp_white</item>
        <item name="backgroundColor">@color/yp_black</item>
        <item name="colorAccent">@color/yp_blue</item>
        <item name="editTextBackground">@color/yp_white</item>
        <item name="hintTextColor">@color/yp_black</item>
        <item name="colorBackgroundFloating">@color/yp_player_button_dark</item>
    </style>
</resources>