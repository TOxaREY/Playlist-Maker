<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yp_white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_layout_height"
        android:layout_marginTop="@dimen/header_layout_marginTop"
        android:layout_marginStart="@dimen/header_layout_marginStart"
        android:layout_marginEnd="@dimen/header_layout_marginEnd">

        <Button
            android:id="@+id/back_to_main_button"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/yp_white"
            android:insetTop="@dimen/button_insetTop"
            android:insetBottom="@dimen/button_insetBottom"
            app:icon="@drawable/ic_arrow_back"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="16dp"
            app:iconTint="@color/yp_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="@dimen/title_layout_marginTop"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/settings"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/title_textSize" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_menu_layout_height"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/settings_menu_layout_marginStart"
            android:layout_marginTop="@dimen/settings_menu_layout_marginTop"
            android:text="@string/dark_theme"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/settings_menu_textSize" />

        <Switch
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="6dp"
            android:layout_gravity="end"
            android:backgroundTint="@color/yp_text_gray"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_menu_layout_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/settings_menu_layout_marginStart"
            android:layout_marginTop="@dimen/settings_menu_layout_marginTop"
            android:text="@string/share_app"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/settings_menu_textSize" />

        <ImageView
            android:layout_width="@dimen/settings_menu_imageView_layout_width"
            android:layout_height="@dimen/settings_menu_imageView_layout_height"
            android:layout_marginTop="@dimen/settings_menu_imageView_layout_marginTop"
            android:layout_marginEnd="@dimen/settings_menu_imageView_layout_marginEnd"
            android:layout_gravity="end"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:src="@drawable/ic_share" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_menu_layout_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/settings_menu_layout_marginStart"
            android:layout_marginTop="@dimen/settings_menu_layout_marginTop"
            android:text="@string/write_to_support"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/settings_menu_textSize" />

        <ImageView
            android:layout_width="@dimen/settings_menu_imageView_layout_width"
            android:layout_height="@dimen/settings_menu_imageView_layout_height"
            android:layout_marginTop="@dimen/settings_menu_imageView_layout_marginTop"
            android:layout_marginEnd="@dimen/settings_menu_imageView_layout_marginEnd"
            android:layout_gravity="end"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:paddingTop="3.1dp"
            android:paddingBottom="2.9dp"
            android:src="@drawable/ic_support" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_menu_layout_height">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/settings_menu_layout_marginStart"
            android:layout_marginTop="@dimen/settings_menu_layout_marginTop"
            android:text="@string/terms_of_use"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/settings_menu_textSize" />

        <ImageView
            android:layout_width="@dimen/settings_menu_imageView_layout_width"
            android:layout_height="@dimen/settings_menu_imageView_layout_height"
            android:layout_marginTop="@dimen/settings_menu_imageView_layout_marginTop"
            android:layout_marginEnd="@dimen/settings_menu_imageView_layout_marginEnd"
            android:layout_gravity="end"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/ic_arrow_forward" />
    </FrameLayout>
</LinearLayout>